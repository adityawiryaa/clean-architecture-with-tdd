{
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "rootDir": ".",
  "verbose": true,
  "testEnvironment": "node",
  "testRegex": "./test/.*.spec.ts$",
  "coverageReporters": [
    "json-summary",
    "text",
    "lcov"
  ],
  "coverageDirectory": ".coverage",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@domain/(.*)$": "<rootDir>/src/core/domain/$1",
    "@use-case/(.*)$": "<rootDir>/src/infrastructure/adapter/use-case/$1",
    "@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
    "@application/(.*)$": "<rootDir>/src/application/$1",
    "@libs/(.*)$": "<rootDir>/libs/$1",
    "@test/(.*)$": "<rootDir>/test/$1"
  }
}